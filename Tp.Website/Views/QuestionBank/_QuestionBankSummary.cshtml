@model Tp.Website.Models.QuestionBank.QuestionBankSummaryViewModel

<div class="col-xl-4 col-md-6">
    <div class="card flex-row align-items-center align-items-stretch border-0"
         data="category-id=@Model.CategoryId">
        <div class="col-4 d-flex align-items-center @Model.BackgroundDarkColourClass justify-content-center rounded-left">
            <em class="@Model.IconImage fa-3x"></em>
        </div>
        <div class="col-8 py-3 @Model.BackgroundColourClass rounded-right">
            <div class="h2 mt-0">@Model.CategoryName</div>
            <div class="d-flex justify-content-between">
                <div>@Model.QuestionCount Questions</div>
                <div>
                    <a href="@Url.Action(MVC.QuestionBank.Add(Model.CategoryId))">
                        <em class="fa fa-plus bg-primary p-2"></em>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>